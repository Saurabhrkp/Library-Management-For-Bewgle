<%if (user != null){%> <%if (book.available && user.borrowed.books.length < 2)
{%>
<form action="/borrow" method="post">
  <input type="hidden" name="bookId" value="<%= book._id %>" />
  <button
    class="rounded-0 btn btn-block btn-lg btn-outline-primary"
    type="submit"
  >
    Borrow Book
  </button>
</form>
<%}else if (!book.available){%>
<button
  class="rounded-0 btn btn-block btn-lg disabled btn-outline-primary"
  type="submit"
>
  Book Issued
</button>
<%} else {%>
<button
  class="rounded-0 btn btn-block btn-lg disabled btn-outline-primary"
  type="submit"
>
  Borrow Limit exceed</button
><% } %> <%}else{%>
<a
  class="btn rounded-0 btn-block btn-lg btn-outline-primary"
  href="/user/signin"
  >Sign in to borrow</a
><%}%>
