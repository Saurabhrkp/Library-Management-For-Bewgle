<script src="https://cdn.ckeditor.com/4.11.4/standard/ckeditor.js"></script>
<%- include('../components/navbar') %>
<div class="text-center"><%- include('../components/messages') %></div>
<div class="container card bg-light shadow my-4">
  <form
    action="/panel/<%= PAGE_TITLE.startsWith('Update') ? `${book._id}?_method=PUT`: 'create' %>"
    method="POST"
    enctype="multipart/form-data"
    class="row justify-content-center"
  >
    <div class="col p-4">
      <h1 class="text-center p-2"><%=PAGE_TITLE%></h1>
      <div class="form-group">
        <label for="title">Title</label>
        <input type="text" name="title" class="form-control" id="title"
        placeholder="Enter Title here" value="<%= typeof book!= 'undefined' ?
        (typeof book.title != 'undefined' ? book.title : '') : '' %>" <%= typeof
        book!= 'undefined' ? '' : 'required' %> />
      </div>
      <div class="form-group">
        <label for="description">Description</label>
        <input type="text" name="description" class="form-control"
        id="description" placeholder="Enter description here" value="<%= typeof
        book!= 'undefined' ? (typeof book.description != 'undefined' ?
        book.description : '') : ''%>" <%= typeof book!= 'undefined' ? '' :
        'required' %> />
      </div>
      <div class="form-group">
        <label for="summary">Summary</label>
        <textarea
          name="summary"
          id="summary"
          class="form-control"
          cols="30"
          rows="10"
        >
<%- typeof book!= 'undefined' ? (typeof book.summary != 'undefined' ? book.summary : '') : '' %></textarea
        >
      </div>
      <div class="row">
        <div class="form-group col">
          <label for="isbn">Book ISBN</label><input type="text" name="isbn"
          class="form-control" id="isbn" placeholder="Enter Book ISBN here"
          value="<%= typeof book!= 'undefined' ? (typeof book.isbn !=
          'undefined' ? book.isbn : '') : ''%>" <%= typeof book!= 'undefined' ?
          '' : 'required' %> />
        </div>
        <div class="form-group col">
          <label for="author">Author</label>
          <input type="text" name="author" class="form-control" id="author"
          placeholder="Enter author name" value="<%= typeof book!= 'undefined' ?
          ( typeof book.author != 'undefined' ? book.author : ''): '' %>" <%=
          typeof book!= 'undefined' ? '' : 'required' %> />
        </div>
      </div>
      <div class="form-group">
        <label for="coverImageID">Cover Image</label>
        <div class="input-group mb-3">
          <div class="custom-file">
            <input id="coverImageID" type="file" accept="image/*"
            name="coverImageID" class="custom-file-input" <%= typeof book!=
            'undefined' ? '' : 'required' %> />
            <label class="custom-file-label" for="coverImageID"
              >Choose Cover Image</label
            >
          </div>
        </div>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-outline-success mr-2">
          Submit
        </button>
        <button
          type="reset"
          class="btn btn-outline-danger"
          onclick="history.back()"
        >
          Cancel
        </button>
      </div>
    </div>
  </form>
</div>

<%-include('../components/footer') %>
<script>
  CKEDITOR.replace('summary');
</script>
